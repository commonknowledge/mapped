{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Start backend containers",
            "type": "node-terminal",
            "command": "docker compose up",
            "request": "launch"
        },
        {
            "name": "NextJS",
            "type": "node-terminal",
            "command": "cd nextjs && npm install && npm run dev",
            "request": "launch"
        },
        {
          "name": "Django background worker",
          "type": "debugpy",
          "request": "launch",
          "program": "${workspaceFolder}/manage.py",
          "args": [
            "procrastinate", "worker"
          ],
          "justMyCode": true,
          "django": true
        },
        {
          // Node 
          "name": "Generate GraphQL types for client",
          "type": "node-terminal",
          "command": "cd nextjs && npm run graphql:watch",
          "request": "launch"
        }
    ],
    "compounds": [
        {
            "name": "App",
            "configurations": [
                "NextJS",
                "Django",
                "Django background worker",
                "Generate GraphQL types for client"
            ]
        },
        {
            "name": "Backend",
            "configurations": [
                "Django",
                "Django background worker",
                "Generate GraphQL types for client"
            ]
        }
    ]
}